---
// src/components/Privacy/ConsentManager.astro
import { Icon } from "astro-icon/components";
---

<div class="bg-white/80 backdrop-blur-lg rounded-3xl p-8 shadow-xl max-w-3xl mx-auto">
  <h3 class="text-2xl font-bold mb-6 flex items-center gap-3">
    <Icon name="mdi:shield-account" class="w-8 h-8 text-orange-600" />
    Your Privacy Controls
  </h3>

  <div class="space-y-6">
    <div class="flex items-center justify-between p-4 bg-orange-50 rounded-xl">
      <div>
        <p class="font-medium">Analytics Cookies</p>
        <p class="text-sm text-gray-600">Help us improve our services</p>
      </div>
      <label class="switch">
        <input type="checkbox" checked />
        <span class="slider"></span>
      </label>
    </div>

    <div class="flex items-center justify-between p-4 bg-orange-50 rounded-xl">
      <div>
        <p class="font-medium">Marketing Preferences</p>
        <p class="text-sm text-gray-600">Receive kitchen optimization tips</p>
      </div>
      <label class="switch">
        <input type="checkbox" />
        <span class="slider"></span>
      </label>
    </div>
  </div>
</div>

<style>
  .switch {
    @apply relative inline-block w-12 h-6;
  }
  .slider {
    @apply absolute inset-0 bg-gray-200 rounded-full transition-all
           before:absolute before:w-5 before:h-5 before:left-0.5 before:bottom-0.5
           before:bg-white before:rounded-full before:transition-all;
  }
  input:checked + .slider {
    @apply bg-orange-600;
  }
  input:checked + .slider:before {
    @apply translate-x-6;
  }
</style>