---
import { Icon } from 'astro-icon/components';

export interface Props {
  name: string;
  image: string;
  bio: string;
  url: string;
  socialLinks?: {
    twitter?: string;
    linkedin?: string;
    github?: string;
    website?: string;
  };
}

const { name, image, bio, socialLinks } = Astro.props;
---

<div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 mt-8" itemscope itemtype="http://schema.org/Person">
  <div class="flex flex-col sm:flex-row items-center sm:items-start">
    <img
      src={image}
      alt={`Portrait of ${name}`}
      class="w-24 h-24 rounded-full object-cover mb-4 sm:mb-0 sm:mr-6"
      itemprop="image"
    />
    <div class="text-center sm:text-left">
      <h3 class="text-2xl font-bold mb-2" itemprop="name">{name}</h3>
      <p class="text-gray-600 mb-4" itemprop="description">{bio}</p>
      {socialLinks && (
        <div class="flex justify-center sm:justify-start space-x-4">
          {socialLinks.twitter && (
            <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-600 transition-colors" itemprop="sameAs">
              <Icon name="mdi:twitter" class="w-6 h-6" />
              <span class="sr-only">Twitter</span>
            </a>
          )}
          {socialLinks.linkedin && (
            <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:text-blue-900 transition-colors" itemprop="sameAs">
              <Icon name="mdi:linkedin" class="w-6 h-6" />
              <span class="sr-only">LinkedIn</span>
            </a>
          )}
          {socialLinks.github && (
            <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-gray-800 hover:text-gray-600 transition-colors" itemprop="sameAs">
              <Icon name="mdi:github" class="w-6 h-6" />
              <span class="sr-only">GitHub</span>
            </a>
          )}
          {socialLinks.website && (
            <a href={socialLinks.website} target="_blank" rel="noopener noreferrer" class="text-teal-600 hover:text-teal-800 transition-colors" itemprop="url">
              <Icon name="mdi:web" class="w-6 h-6" />
              <span class="sr-only">Website</span>
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>