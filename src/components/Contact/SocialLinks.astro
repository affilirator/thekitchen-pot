---
// src/components/Contact/SocialLinks.astro
import { Icon } from 'astro-icon/components';

interface SocialLink {
  platform: string;
  url: string;
  handle: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<div class="bg-orange-50 rounded-3xl p-8 text-center space-y-6">
  <h3 class="text-2xl font-bold">Join Our Kitchen Community</h3>

  <div class="flex justify-center gap-6 flex-wrap">
    {links.map((link) => (
      <a
        href={link.url}
        class="bg-white p-4 rounded-2xl shadow-md hover:shadow-lg transition-all
               hover:-translate-y-1 w-32 h-32 flex flex-col items-center justify-center"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name={`mdi:${link.platform}`}
          class="w-12 h-12 text-orange-600 mb-2"
        />
        <span class="text-sm font-medium text-gray-600">@{link.handle}</span>
      </a>
    ))}
  </div>

  <p class="text-gray-600 text-sm">
    Share your #TinyKitchenWins for a chance to be featured!
  </p>
</div>