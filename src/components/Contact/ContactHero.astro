---
// src/components/Contact/ContactHero.astro
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import ContactHeroImg from "@/data/assets/images/quitest-kitchen-appliances.jpg";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative min-h-[60vh] bg-gradient-to-br from-orange-50 to-amber-50 overflow-hidden">
  <div class="container mx-auto px-4 py-24 grid lg:grid-cols-2 gap-12 items-center">
    <div class="relative z-10 space-y-8">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900">
        {title}
        <span class="block text-orange-600 text-2xl md:text-3xl mt-4">{subtitle}</span>
      </h1>
      <div class="flex gap-4">
        <a href="#form" class="btn-kitchen">
          <Icon name="mdi:email-edit" class="mr-2 w-5 h-5" />
          Send Message
        </a>
      </div>
    </div>

    <div class="relative hidden lg:block">
      <div class="absolute -top-8 -right-8 w-64 h-64 bg-orange-100 rounded-full mix-blend-multiply opacity-40"></div>
      <Image
        src={ContactHeroImg}
        alt="Organized kitchen workspace"
        width={600}
        height={400}
        class="rounded-3xl shadow-xl rotate-2 hover:rotate-0 transition-transform"
      />
      <div class="absolute -bottom-6 -left-6 bg-white p-4 rounded-xl shadow-lg flex items-center gap-3">
        <Icon name="mdi:clock" class="w-8 h-8 text-orange-600" />
        <div>
          <p class="font-bold">Response Time</p>
          <p class="text-sm">24-48 hrs average</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .btn-kitchen {
    @apply inline-flex items-center px-6 py-3 bg-orange-600 text-white rounded-full
           hover:bg-orange-700 transition-all transform hover:scale-105
           shadow-md hover:shadow-lg text-lg font-medium;
  }
</style>