---
// src/components/Contact/ContactMap.astro
import { Icon } from "astro-icon/components";
---

<div class="relative rounded-3xl overflow-hidden shadow-xl border-4 border-white
           hover:border-orange-100 transition-all">
  <div class="absolute inset-0 bg-orange-600/5 z-10 pointer-events-none"></div>
  <iframe
    src="https://www.google.com/maps/embed?pb=..."
    class="w-full h-96 border-0"
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    aria-label="Our Location Map"
  ></iframe>

  <div class="absolute bottom-4 left-4 bg-white p-4 rounded-xl shadow-md flex items-center gap-3">
    <Icon name="mdi:map-marker" class="w-8 h-8 text-orange-600" />
    <div>
      <p class="font-bold">Visit Us</p>
      <p class="text-sm">123 Kitchen Street</p>
    </div>
  </div>
</div>