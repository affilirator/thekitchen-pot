---
// src/components/Author/EEATBadges.astro
import { Icon } from "astro-icon/components";
---

<section class="bg-gray-50 py-12" id="credentials">
  <div class="container mx-auto px-4 grid md:grid-cols-4 gap-8">
    <div class="text-center p-6 bg-white rounded-lg shadow-sm">
      <Icon name="mdi:chef-hat" class="w-12 h-12 text-primary-600 mx-auto mb-4" />
      <p class="font-semibold">15+ Years</p>
      <p class="text-gray-600">Professional Experience</p>
    </div>

    <div class="text-center p-6 bg-white rounded-lg shadow-sm">
      <Icon name="mdi:school" class="w-12 h-12 text-primary-600 mx-auto mb-4" />
      <p class="font-semibold">Le Cordon Bleu</p>
      <p class="text-gray-600">Paris Culinary Arts Degree</p>
    </div>

    <div class="text-center p-6 bg-white rounded-lg shadow-sm">
      <Icon name="mdi:medal" class="w-12 h-12 text-primary-600 mx-auto mb-4" />
      <p class="font-semibold">James Beard Award</p>
      <p class="text-gray-600">2020 Nominee</p>
    </div>

    <div class="text-center p-6 bg-white rounded-lg shadow-sm">
      <Icon name="mdi:book" class="w-12 h-12 text-primary-600 mx-auto mb-4" />
      <p class="font-semibold">Published Author</p>
      <p class="text-gray-600">2 Bestselling Cookbooks</p>
    </div>
  </div>
</section>