---
// src/components/Author/MediaFeatures.astro
import { Image } from "astro:assets";

import NytimesImg from "@/data/assets/images/newyorktimes.svg"
import FoodWineImg from "@/data/assets/images/foodwine.jpeg"
---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Featured In</h2>

    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 items-center">
      <Image
        src={NytimesImg}
        alt="The New York Times"
        width={160}
        height={60}
      />
      <Image
        src={FoodWineImg}
        alt="Food & Wine Magazine"
        width={160}
        height={60}
      />
      <!-- Add more reputable media logos -->
    </div>
  </div>
</section>