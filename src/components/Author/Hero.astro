---
// src/components/Author/Hero.astro
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import bonifaceHeadshot from "@/data/assets/images/founder.jpeg";

// From Unsplash: Professional chef portrait (ensure rights to use)
---

<section class="bg-white py-16">
  <div class="container mx-auto px-4 flex flex-col md:flex-row items-center gap-12">
    <div class="md:w-1/3">
      <Image
        src={bonifaceHeadshot}
        alt="Boniface Muriuki - Professional Chef & Tiny Kitchen Expert"
        width={400}
        height={600}
        class="rounded-lg shadow-xl"
        loading="eager"
      />
    </div>

    <div class="md:w-2/3">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Boniface Muriuki
      </h1>
      <p class="text-xl text-gray-600 mb-6">
        Executive Chef • Tiny Space Cooking Innovator • 15+ Years Industry Experience
      </p>

      <div class="flex gap-4 mb-8">
        <a href="#credentials" class="bg-primary-600 text-foreground px-6 py-3 rounded-lg hover:bg-primary-700 transition">
          View Credentials
        </a>
        <a href="#contact" class="border-2 border-primary-600 text-primary-600 px-6 py-3 rounded-lg hover:bg-primary-50 transition">
          Contact Boniface
        </a>
      </div>

      <div class="flex gap-6">
        <a href="[LinkedIn URL]" aria-label="LinkedIn Profile">
          <Icon name="mdi:linkedin" class="w-8 h-8 text-gray-600 hover:text-primary-600 transition" />
        </a>
        <a href="[Verified Twitter URL]" aria-label="Twitter Profile">
          <Icon name="mdi:twitter" class="w-8 h-8 text-gray-600 hover:text-primary-600 transition" />
        </a>
        <a href="[Professional Website]" aria-label="Personal Website">
          <Icon name="mdi:web" class="w-8 h-8 text-gray-600 hover:text-primary-600 transition" />
        </a>
      </div>
    </div>
  </div>
</section>