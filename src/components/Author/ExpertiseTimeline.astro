---
// src/components/Author/ExpertiseTimeline.astro
import { Icon } from "astro-icon/components";
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Professional Journey</h2>

    <div class="relative max-w-3xl mx-auto">
      <div class="absolute left-1/2 w-1 bg-gray-200 h-full"></div>

      <div class="mb-12 flex items-center gap-8">
        <div class="w-1/2 text-right">
          <h3 class="font-semibold">Le Cordon Bleu Paris</h3>
          <p class="text-gray-600">2005-2008</p>
        </div>
        <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
          <Icon name="mdi:school" class="text-white w-6 h-6" />
        </div>
        <div class="w-1/2">
          <p class="text-gray-600">Graduated Top 5% of class</p>
        </div>
      </div>

      <!-- Repeat timeline items with different icons/copy -->

    </div>
  </div>
</section>