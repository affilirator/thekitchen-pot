---
import { Icon } from "astro-icon/components";

const contactItems = [
  { type: 'email', label: 'Recipe Ideas', value: 'hello@thekitchenpot.com', icon: 'mdi:chef-hat' },
  { type: 'phone', label: 'Emergency Kitchen Rescue', value: '+1 (555) 789-1011', icon: 'mdi:fire-extinguisher' },
  { type: 'social', label: 'Spice Rack Updates', value: '@ChefBoniface', icon: 'mdi:instagram' },
  { type: 'location', label: 'The Kitchen Pot', value: 'Nairobi • Paris • NYC', icon: 'mdi:map-marker' }
];
---

<section id="contact" class="py-12 sm:py-20 bg-teal-100 overflow-hidden " aria-labelledby="tiny-kitchen-space-calculator">
  <div class="mx-auto px-4 sm:px-6 lg:px-8">

<div class="relative bg-card rounded-3xl p-8 mb-4 shadow-lg border-2 border-primary transform rotate-1 hover:rotate-0 transition-all duration-300 hover:shadow-xl">
  {/* Wooden Shelf */}
  <div class="absolute top-0 left-0 right-0 h-4 bg-primary rounded-t-3xl opacity-90"></div>

  {/* Hanging Utensils */}
  <div class="absolute -top-8 left-1/2 -translate-x-1/2 flex gap-6">
    <Icon name="mdi:glass-wine" class="w-8 h-8 text-primary rotate-12 drop-shadow-md" />
    <Icon name="mdi:cutlery-clean" class="w-8 h-8 text-primary -rotate-12 drop-shadow-md" />
    <Icon name="mdi:whiskey" class="w-8 h-8 text-primary -rotate-12 drop-shadow-md" />
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
    {contactItems.map((item, index) => (
      <div
        class={`p-4 rounded-xl bg-background relative transition-all duration-300 hover:scale-105 hover:shadow-md ${
          index === 2 ? 'md:col-span-2' : ''
        }`}
      >
        {/* Floating Icon */}
        <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-card p-2 rounded-full border-2 border-primary shadow-sm">
          <Icon name={item.icon} class="w-6 h-6 text-primary" />
        </div>

        {/* Content */}
        <h3 class="text-center font-handwritten mt-4 text-2xl mb-2 text-accent">
          {item.label}
        </h3>
        <div class="text-center font-mono text-muted-foreground hover:text-primary transition-colors">
          {item.type === 'social' ? (
            <a
              href="https://instagram.com/chefboniface"
              class="flex items-center justify-center gap-2 hover:text-primary transition-colors"
            >
              <Icon name="mdi:instagram" class="w-5 h-5" />
              {item.value}
            </a>
          ) : (
            <span>{item.value}</span>
          )}
        </div>

        {/* Decorative Dots */}
        <div class="absolute bottom-2 right-2 flex gap-1">
          <div class="w-2 h-2 rounded-full bg-primary/60"></div>
          <div class="w-2 h-2 rounded-full bg-secondary/60"></div>
          <div class="w-2 h-2 rounded-full bg-primary/60"></div>
        </div>
      </div>
    ))}
  </div>

  {/* Hanging Sign */}
  <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 bg-secondary text-secondary-foreground px-4 py-1 rounded-full text-sm font-bold shadow-md">
    Fresh Connections Daily
  </div>

  <style>
    .font-handwritten {
      font-family: 'Caveat', cursive;
      font-weight: 700;
    }
  </style>
</div>
</div>
</section>