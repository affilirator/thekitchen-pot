---
import { Astronav, MenuItems, MenuIcon,  Dropdown, DropdownItems } from "astro-navbar";
import Logo from "../components/Logo.astro";
---

<header class="bg-blue-600 lg:flex p-5  gap-5 mx-auto">
  <Astronav>
    <div class=" flex w-full justify-between mx-auto">
     <Logo />
      <div class="block lg:hidden mx-auto">
        <MenuIcon class="w-4 h-4 " />
      </div>
    </div>
    <MenuItems class="hidden text-gray-100 lg:flex mx-auto">
      <ul class="menu-items flex flex-col lg:flex-row lg:gap-5 text-gray-200">
        <li>Home</li>
        <li>About</li>
        <li>
          <Dropdown class="dropdown group ">
            <button class="flex items-center">
              <span> Services </span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="currentColor"
                class="w-3 h-3 mt-0.5 group-open:rotate-180">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="absolute top-0 bg-blue-500 z-50 mx-auto">
                <ul>
                  <li>Menu 1</li>
                  <li>Menu 2</li>
                  <li>Menu 3</li>
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>