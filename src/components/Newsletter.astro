---
import { Button } from "@/components/ui/button";
//import { Image } from "astro:assets";
import { Mail } from 'lucide-react';
//import bgImg from "@/assets/images/background-image.jpg";
//const imgUrl = bgImg.src

---

<section class="bg-terrain py-20 text-white relative overflow-hidden">
  <div class="absolute inset-0 bg-[url('/src/assets/images/background-image.jpg')] bg-cover bg-center opacity-10"></div>
  <div class="container mx-auto px-4 text-center relative">
    <div class="inline-flex items-center justify-center gap-2 bg-white/10 px-4 py-2 rounded-full mb-6">
      <Mail className="h-5 w-5" />
      <span class="font-medium">Newsletter</span>
    </div>
    <h2 class="font-display text-5xl mb-4">Join the Tiny Kitchen Revolution</h2>
    <p class="text-lg mb-8 max-w-2xl mx-auto text-silver">
      Discover the latest kitchen technology that saves space, simplifies cooking, and impresses the kids.
    </p>
    <form 
      method="POST" 
      action="/api/newsletter.json"
      class="max-w-md mx-auto flex flex-col sm:flex-row gap-4"
    >
      <input
        name="email"
        type="email"
        placeholder="Enter your email"
        class="flex-1 px-6 py-3 rounded-lg text-accent w-full"
        required
      />
      <Button type="submit" size="lg" class="bg-primary hover:bg-primary/90 whitespace-nowrap px-8">
        Subscribe Now
      </Button>
    </form>
    <p class="text-sm mt-4 text-silver/80">
      By subscribing, you agree to our Privacy Policy. Unsubscribe at any time.
    </p>
  </div>
</section>