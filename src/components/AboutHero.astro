---
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
---

<section class="relative overflow-hidden min-h-[100vh] flex items-center">
  <!-- Parallax Background Layers -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-[url('/images/kitchen-bg.jpg')] bg-cover bg-center bg-no-repeat parallax-bg"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-slate-900/70 via-slate-900/80 to-slate-900/95"></div>
  </div>
  
  <!-- Animated Particles -->
  <div class="absolute inset-0 z-0">
    <div id="particles-js" class="absolute inset-0 opacity-40"></div>
  </div>
  
  <!-- Floating Elements -->
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="floating-element absolute top-[10%] left-[5%] w-32 h-32 rounded-full bg-gradient-to-br from-purple-500/20 to-cyan-500/10 blur-2xl"></div>
    <div class="floating-element absolute top-[20%] right-[10%] w-64 h-64 rounded-full bg-gradient-to-tr from-amber-500/10 to-pink-500/20 blur-3xl"></div>
    <div class="floating-element absolute bottom-[15%] left-[15%] w-48 h-48 rounded-full bg-gradient-to-bl from-emerald-500/20 to-blue-500/10 blur-2xl"></div>
  </div>
  
  <!-- Main Content -->
  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-8">
        <!-- Badge -->
        <div class="glassmorphism-badge inline-flex items-center gap-2 px-4 py-2 rounded-full backdrop-blur-md bg-white/10 border border-white/20 shadow-lg">
          <span class="pulse-dot"></span>
          <span class="text-white/90 font-medium tracking-wide text-sm">Our Kitchen Philosophy</span>
        </div>
        
        <!-- Heading with animated gradient -->
        <h1 class="font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-purple-200 to-white animate-gradient">We Help You Cook</span>
          <br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-500">
            Like a Pro in Tiny Spaces
          </span>
        </h1>
        
        <!-- Description with glassmorphism card -->
        <div class="glassmorphism-card p-6 backdrop-blur-lg bg-white/10 border border-white/20 rounded-2xl shadow-xl">
          <p class="text-base sm:text-lg text-white/80 leading-relaxed">
            You don't need a sprawling suburban kitchen to cook delicious mealsâ€”you need smart solutions designed for real-life tiny spaces. Our team of culinary experts and space-saving specialists are here to transform your cooking experience.
          </p>
        </div>
        
        <!-- Stats with futuristic design -->
        <div class="grid grid-cols-3 gap-4">
          {[
            { value: "10+", label: "Years Experience" },
            { value: "500+", label: "Products Tested" },
            { value: "50k+", label: "Happy Cooks" }
          ].map(stat => (
            <div class="glassmorphism-stat text-center p-4 backdrop-blur-md bg-white/5 border border-white/10 rounded-xl">
              <div class="text-2xl md:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-500">{stat.value}</div>
              <div class="text-xs md:text-sm text-white/70">{stat.label}</div>
            </div>
          ))}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/about/team" class="group">
            <Button
              size="lg"
              className="w-full sm:w-auto bg-gradient-to-r from-purple-600 to-cyan-500 hover:from-purple-700 hover:to-cyan-600 text-white border-0 relative overflow-hidden"
            >
              <span class="relative z-10 flex items-center gap-2">
                Meet Our Team
                <Icon name="mdi:arrow-right" class="w-5 h-5 transition-transform group-hover:translate-x-1" />
              </span>
              <span class="absolute inset-0 bg-gradient-to-r from-purple-700 to-cyan-600 opacity-0 group-hover:opacity-100 transition-opacity"></span>
            </Button>
          </a>
          
          <a href="/contact-us" class="group">
            <Button
              size="lg"
              variant="outline"
              className="w-full sm:w-auto border border-white/30 text-white hover:bg-white/10 backdrop-blur-sm"
            >
              <span class="flex items-center gap-2">
                Contact Us
                <Icon name="mdi:message-outline" class="w-5 h-5" />
              </span>
            </Button>
          </a>
        </div>
      </div>
      
      <!-- Right Content - 3D Rotating Card -->
      <div class="relative mx-auto perspective">
        <div class="card-3d w-full max-w-md aspect-[4/5] relative">
          <!-- Front -->
          <div class="card-face card-front absolute inset-0 glassmorphism-card backdrop-blur-xl bg-white/15 border border-white/20 rounded-2xl shadow-2xl p-6 flex flex-col justify-between">
            <div class="space-y-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-purple-500 to-cyan-500 flex items-center justify-center">
                <Icon name="mdi:chef-hat" class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-2xl font-bold text-white">About The Kitchen Pot</h3>
              <p class="text-white/80">
                Founded in 2014, we're a team of culinary enthusiasts who believe that limited space shouldn't limit your cooking potential.
              </p>
            </div>
            
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-cyan-400" />
                <span class="text-white/90">Space-saving kitchen solutions</span>
              </div>
              <div class="flex items-center gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-cyan-400" />
                <span class="text-white/90">Expert-tested recommendations</span>
              </div>
              <div class="flex items-center gap-3">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-cyan-400" />
                <span class="text-white/90">Community of tiny kitchen chefs</span>
              </div>
            </div>
            
            <div class="text-center text-white/60 text-sm">
              Hover to learn more
            </div>
          </div>
          
          <!-- Back -->
          <div class="card-face card-back absolute inset-0 glassmorphism-card backdrop-blur-xl bg-gradient-to-br from-purple-900/80 to-cyan-900/80 border border-white/20 rounded-2xl shadow-2xl p-6 flex flex-col justify-between">
            <h3 class="text-2xl font-bold text-white">Our Mission</h3>
            <p class="text-white/80 leading-relaxed">
              We believe everyone deserves to cook amazing meals, regardless of kitchen size. Our mission is to help you maximize your small space with smart tools, innovative techniques, and space-saving solutions.
            </p>
            <div class="grid grid-cols-2 gap-4">
              <div class="glassmorphism-stat text-center p-3 backdrop-blur-md bg-white/5 border border-white/10 rounded-xl">
                <div class="text-xl font-bold text-cyan-400">200+</div>
                <div class="text-xs text-white/70">Articles</div>
              </div>
              <div class="glassmorphism-stat text-center p-3 backdrop-blur-md bg-white/5 border border-white/10 rounded-xl">
                <div class="text-xl font-bold text-purple-400">15+</div>
                <div class="text-xs text-white/70">Experts</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-slate-900 to-transparent z-10"></div>
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20">
    <a href="#more" class="flex flex-col items-center text-white/60 hover:text-white/90 transition-colors">
      <span class="text-sm font-medium mb-2">Discover More</span>
      <div class="scroll-down-arrow">
        <Icon name="mdi:chevron-down" class="w-6 h-6" />
      </div>
    </a>
  </div>
</section>

<style>
  /* Parallax Effect */
  .parallax-bg {
    transform: translateZ(-10px) scale(2);
    transform-origin: center;
  }
  
  .perspective {
    perspective: 1000px;
  }
  
  /* 3D Card Flip */
  .card-3d {
    transform-style: preserve-3d;
    transition: transform 1.5s;
  }
  
  .card-3d:hover {
    transform: rotateY(180deg);
  }
  
  .card-face {
    backface-visibility: hidden;
    transition: all 0.5s;
  }
  
  .card-front {
    transform: rotateY(0deg);
  }
  
  .card-back {
    transform: rotateY(180deg);
  }
  
  /* Floating Animation */
  .floating-element {
    animation: float 8s infinite ease-in-out;
  }
  
  .floating-element:nth-child(2) {
    animation-delay: 2s;
    animation-duration: 10s;
  }
  
  .floating-element:nth-child(3) {
    animation-delay: 4s;
    animation-duration: 12s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }
  
  /* Pulse Animation */
  .pulse-dot {
    width: 8px;
    height: 8px;
    background-color: #22d3ee;
    border-radius: 50%;
    position: relative;
  }
  
  .pulse-dot::after {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid #22d3ee;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% {
      transform: scale(0.5);
      opacity: 1;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }
  
  /* Gradient Animation */
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradientShift 8s ease infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  /* Scroll Down Animation */
  .scroll-down-arrow {
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>

<script>
  // Simple particles effect
  document.addEventListener('astro:page-load', () => {
    const particlesContainer = document.getElementById('particles-js');
    if (!particlesContainer) return;
    
    for (let i = 0; i < 50; i++) {
      const particle = document.createElement('div');
      particle.className = 'absolute rounded-full bg-white';
      
      // Random size between 1-3px
      const size = Math.random() * 2 + 1;
      particle.style.width = `${size}px`;
      particle.style.height = `${size}px`;
      
      // Random position
      particle.style.left = `${Math.random() * 100}%`;
      particle.style.top = `${Math.random() * 100}%`;
      
      // Random opacity
      particle.style.opacity = `${Math.random() * 0.5 + 0.1}`;
      
      // Animation
      particle.style.animation = `float ${Math.random() * 10 + 10}s infinite ease-in-out`;
      particle.style.animationDelay = `${Math.random() * 5}s`;
      
      particlesContainer.appendChild(particle);
    }
    
    // Parallax effect on scroll
    const parallaxBg = document.querySelector('.parallax-bg');
    if (parallaxBg) {
      window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        parallaxBg.style.transform = `translateY(${scrollY * 0.5}px) translateZ(-10px) scale(2)`;
      });
    }
  });
</script>