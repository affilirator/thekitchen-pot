---
import { Card } from "@/components/ui/card";
import { ArrowRight } from 'lucide-react';
---

<section class="py-20 bg-silver">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-12">
      <h2 class="font-display text-4xl text-accent">FEATURED STORIES</h2>
      <a href="/articles" class="text-secondary hover:text-primary font-medium flex items-center gap-2 transition-colors">
        View All Articles
        <ArrowRight className="h-4 w-4" />
      </a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <Card className="overflow-hidden group hover:shadow-lg transition-shadow">
        <div class="relative overflow-hidden">
          <img
            src="https://images.unsplash.com/photo-1604762512526-b7ce326d9b38?q=80&w=1000"
            alt="Mountain biker on trail"
            class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <span class="absolute top-4 left-4 px-3 py-1 bg-primary text-white text-sm font-medium rounded">
            Trail Review
          </span>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mt-2 mb-3 group-hover:text-primary transition-colors">
            Exploring Rotorua's Redwoods
          </h3>
          <p class="text-gray-600 mb-4 line-clamp-2">
            Discover why Rotorua's Whakarewarewa Forest is a world-class MTB destination.
          </p>
          <a 
            href="/trails/rotorua-redwoods" 
            class="text-secondary font-medium hover:text-primary inline-flex items-center gap-2 transition-colors"
          >
            Read More
            <ArrowRight className="h-4 w-4" />
          </a>
        </div>
      </Card>

      <Card className="overflow-hidden group hover:shadow-lg transition-shadow">
        <div class="relative overflow-hidden">
          <img
            src="https://images.unsplash.com/photo-1576858574144-9ae1ebcf5ae5?q=80&w=1000"
            alt="Mountain bike gear"
            class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <span class="absolute top-4 left-4 px-3 py-1 bg-primary text-white text-sm font-medium rounded">
            Gear Review
          </span>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mt-2 mb-3 group-hover:text-primary transition-colors">
            2024's Best MTB Helmets
          </h3>
          <p class="text-gray-600 mb-4 line-clamp-2">
            Our comprehensive guide to the safest and most comfortable MTB helmets.
          </p>
          <a 
            href="/gear/best-mtb-helmets-2024" 
            class="text-secondary font-medium hover:text-primary inline-flex items-center gap-2 transition-colors"
          >
            Read More
            <ArrowRight className="h-4 w-4" />
          </a>
        </div>
      </Card>

      <Card className="overflow-hidden group hover:shadow-lg transition-shadow">
        <div class="relative overflow-hidden">
          <img
            src="https://images.unsplash.com/photo-1622112494069-ec219b0d8d08?q=80&w=1000"
            alt="Mountain bike maintenance"
            class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
          />
          <span class="absolute top-4 left-4 px-3 py-1 bg-primary text-white text-sm font-medium rounded">
            Maintenance
          </span>
        </div>
        <div class="p-6">
          <h3 class="text-xl font-bold mt-2 mb-3 group-hover:text-primary transition-colors">
            Essential Spring Maintenance
          </h3>
          <p class="text-gray-600 mb-4 line-clamp-2">
            Keep your bike in top condition with our spring maintenance checklist.
          </p>
          <a 
            href="/maintenance/spring-checklist" 
            class="text-secondary font-medium hover:text-primary inline-flex items-center gap-2 transition-colors"
          >
            Read More
            <ArrowRight className="h-4 w-4" />
          </a>
        </div>
      </Card>
    </div>
  </div>
</section>