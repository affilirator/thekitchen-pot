---
// src/components/Homepage/SpaceCalculator.astro
import { Icon } from "astro-icon/components";
---

<section class="py-12 sm:py-20 bg-teal-100 overflow-hidden " aria-labelledby="tiny-kitchen-space-calculator">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Will It Fit? Calculator</h2>
      <p class="text-gray-600 mb-8">Enter your kitchen dimensions to see recommended products</p>

      <div class="bg-white p-8 rounded-xl shadow-lg">
        <div class="grid grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-medium mb-2">Counter Length (inches)</label>
            <input type="number" class="w-full p-3 border rounded-lg" placeholder="e.g. 24" />
          </div>
          <div>
            <label class="block text-sm font-medium mb-2">Cabinet Depth (inches)</label>
            <input type="number" class="w-full p-3 border rounded-lg" placeholder="e.g. 12" />
          </div>
        </div>

        <button class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition flex items-center gap-2 mx-auto">
          <Icon name="mdi:calculator" class="w-5 h-5" />
          Calculate My Space
        </button>
      </div>

      <div class="mt-8 animate-fade-in">
        <!-- Dynamic results would go here -->
        <div class="bg-green-50 p-4 rounded-lg flex items-center gap-4">
          <Icon name="mdi:check-circle" class="text-green-600 w-8 h-8" />
          <p>Based on your space, we recommend these 12 space-saving products!</p>
        </div>
      </div>
    </div>
  </div>
</section>