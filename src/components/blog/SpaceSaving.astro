---
// src/components/SpaceSavingCookware.astro
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import featureImg from "@/assets/images/feature-image.png";

interface Props {
   
   name?: string;
   age?: number;
   featureImage?: string;
   headline?: string;
   attention?: string;
   interest?: string;
   desire?: string;
   ctaText?: string;
   ctaLink?: string;
   
}



const {
  headline = "Big Baking in Tiny Kitchens",
  attention = "Struggling to bake your dreams in a pint-sized kitchen?",
  interest = "Imagine having every baking essential at your fingertips...",
  desire = "Feel the freedom as nesting bowls disappear...",
  ctaText = "Explore Space-Saving Bakeware",
  ctaLink = "/cookware",
  featureImage = featureImg.src,
  
} = Astro.props;



// In a real implementation, fetch from content collection:
// const bakewarePosts = (await getCollection('blog'))
//   .filter(post => post.data.category === 'bakeware')
//   .slice(0, 5);
const bakewarePosts = [
  {
    title: "5 Collapsible Bakeware Marvels",
    excerpt: "Transform your storage game with these space-wizards",
    image: "/images/blog/collapsible.jpg",
    url: "/blog/collapsible-bakeware"
  },
  {
    title: "Stack Like a Pro: Vertical Baking",
    excerpt: "Maximize your 12\" of vertical space efficiently",
    image: "/images/blog/stacking.jpg",
    url: "/blog/vertical-baking"
  },
  {
    title: "Multi-Function Magic",
    excerpt: "One pan, seven baking functions revealed",
    image: "/images/blog/multifunction.jpg",
    url: "/blog/multi-function-bakeware"
  },
  {
    title: "Nano-Kitchen Baking Hacks",
    excerpt: "Professional results in under 50 sq ft",
    image: "/images/blog/nano-kitchen.jpg",
    url: "/blog/nano-kitchen-hacks"
  },
  {
    title: "The Minimalist Baker's Toolkit",
    excerpt: "Only 3 pieces you actually need",
    image: "/images/blog/minimalist.jpg",
    url: "/blog/minimalist-baking"
  }
];
---

<style is:global>
  .galaxy-bg {
    background: radial-gradient(circle at top, #1a202c, #0d1117);
  }
  .orbit-hover {
    transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
  }
  .orbit-hover:hover {
    transform: rotate(5deg) scale(1.03);
  }
</style>

<div class="galaxy-bg text-white rounded-2xl overflow-hidden border border-slate-700 shadow-[0_0_60px_-15px_rgba(109,40,217,0.3)]">
  <div class="grid grid-cols-1 lg:grid-cols-[1fr_0.8fr] gap-10 p-8">
    <!-- Left Column - AIDA Content -->
    <div class="space-y-6">
      <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-400 to-cyan-300 bg-clip-text text-transparent tracking-tight">
        {headline}
      </h1>
      
      <div class="space-y-5 text-slate-200">
        <p class="text-xl py-2 border-l-4 border-purple-500 pl-4 italic">
          {attention}
        </p>
        
        <p class="text-lg leading-relaxed">
          {interest}
        </p>
        
        <p class="text-lg leading-relaxed bg-slate-800/40 p-5 rounded-xl border border-slate-700">
          {desire}
        </p>
      </div>
      
      <a href={ctaLink} class="inline-block mt-4 px-8 py-4 rounded-full bg-gradient-to-r from-purple-600 to-cyan-500 hover:from-purple-700 hover:to-cyan-600 text-white font-bold text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        {ctaText} &rarr;
      </a>
    </div>

    <!-- Right Column -->
    <div class="grid grid-rows-[auto_1fr] gap-8">
      <!-- Upper Section - Feature Image -->
      <div class="overflow-hidden rounded-2xl border border-slate-700 shadow-xl">
        <Image
          src={featureImg} 
          alt="Space-saving bakeware in tiny kitchen"
          class="w-full h-64 object-cover orbit-hover"
          format={'webp'}
          
          width={600}
          height={400}
        />
      </div>

      <!-- Lower Section - Blog Posts -->
      <div>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          Bakeware Innovations
        </h2>
        
        <div class="space-y-5">
          {bakewarePosts.map((post) => (
            <a href={post.url} class="group block orbit-hover">
              <div class="flex gap-4 items-start p-3 hover:bg-slate-800/40 rounded-xl transition-all">
                <div class="flex-shrink-0">
                  <img 
                    src={post.image} 
                    alt={post.title}
                    class="w-20 h-20 object-cover rounded-lg border border-slate-700"
                    width={80}
                    height={80}
                  />
                </div>
                <div>
                  <h3 class="font-bold group-hover:text-cyan-300 transition-colors">
                    {post.title}
                  </h3>
                  <p class="text-sm text-slate-400 mt-1">
                    {post.excerpt}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>