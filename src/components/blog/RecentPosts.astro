---
interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<ul class="space-y-4">
  {posts.map((post) => (
    <li class="group">
      <a href={`/blog/${post.slug}/`} class="flex gap-3 items-start">
        {post.data.image && (
          <img
            src={post.data.image}
            alt={post.data.title}
            class="w-20 h-20 object-cover rounded-md group-hover:opacity-90 transition-opacity"
          />
        )}
        <div class="flex-1">
          <h3 class="text-sm font-medium text-gray-900 group-hover:text-blue-600 line-clamp-2">
            {post.data.title}
          </h3>
          <time class="text-xs text-gray-500">
            {new Date(post.data.publishDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
      </a>
    </li>
  ))}
</ul>
