---
import { Icon } from 'astro-icon/components';
import Logo from "../components/Logo.astro";
import MobileNav from "./MobileNav.astro";

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/blog/', text: 'Blog' },
  { href: '/about/', text: 'About' },
  { href: '/contact-us/', text: 'Contact' },
  {
    text: 'Resources',
    children: [
      { href: '/blog/category/kitchenware/', text: 'Kitchenware' },
      { href: '/blog/category/bakeware/', text: 'Bakeware' },
      { href: '/blog/category/how-to-guides/', text: 'Guides' },
    ]
  },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-gradient-to-r from-teal-600 via-teal-700 to-emerald-600 text-white top-0 z-30 backdrop-blur-sm bg-opacity-90 border-b border-white/10 shadow-lg">
  <div class="container mx-auto px-4 py-3 relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-white/10 mask-gradient"></div>
    <div class="header-nav flex justify-between items-center">
      <Logo />

      <nav class="hidden md:flex space-x-8 z-50" aria-label="Main Navigation">
        {navItems.map((item) => (
          item.children ? (
            <div class="relative group">
              <button class="flex items-center space-x-1 hover:text-white/90 hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/20 rounded-lg px-3 py-2 relative group" aria-expanded="false">
                <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span>{item.text}</span>
                <Icon name="mdi:chevron-down" class="w-4 h-4" />
              </button>
              <ul class="absolute left-0 mt-2 w-56 bg-white/90 backdrop-blur-md text-teal-900 rounded-lg shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 ease-in-out border border-white/20 transform group-hover:translate-y-0 translate-y-2">
                {item.children.map((child) => (
                  <li>
                    <a href={child.href} class="block px-4 py-3 hover:bg-teal-50/50 transition-all duration-300 rounded-md hover:translate-x-1" aria-current={currentPath === child.href ? 'page' : undefined}>
                      {child.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <a href={item.href} class="relative px-3 py-2 hover:text-white/90 transition-all duration-300 focus:outline-none group rounded-lg" aria-current={currentPath === item.href ? 'page' : undefined}>
              <span class="relative z-10">{item.text}</span>
              <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-hover:scale-105"></div>
              {item.text}
            </a>
          )
        ))}
      </nav>

      <div class="flex items-center space-x-4">
        <form class="hidden md:block">
          <label for="search" class="sr-only">Search</label>
          <div class="relative">
            <input
              type="search"
              id="search"
              name="search"
              placeholder="Search..."
              class="bg-white/10 text-white placeholder-white/60 rounded-full py-2 px-5 pr-12 focus:outline-none focus:ring-2 focus:ring-white/20 transition-all duration-300 hover:bg-white/20 w-64"
            />
            <button type="submit" class="absolute right-0 top-0 mt-2 mr-4 transition-transform duration-300 hover:scale-110" aria-label="Submit search">
              <Icon name="mdi:magnify" class="w-5 h-5 text-teal-300" />
            </button>
          </div>
        </form>

        <button
          id="mobile-menu-toggle"
          class="md:hidden text-white focus:outline-none focus:ring-2 focus:ring-white/20 rounded-lg p-2 hover:bg-white/10 transition-all duration-300"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <Icon name="mdi:menu" class="w-6 h-6" />
          <span class="sr-only">Toggle menu</span>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="md:hidden mt-4 hidden transform transition-all duration-300 ease-in-out">
      <div class="relative rounded-xl bg-white/10 backdrop-blur-md p-4 border border-white/10 shadow-2xl">
      <nav class="flex flex-col space-y-3" aria-label="Mobile Navigation">
        {navItems.map((item) => (
          item.children ? (
            <div class="space-y-2">
              <button class="flex items-center justify-between w-full text-left hover:text-white/90 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/20 rounded-lg px-3 py-2 hover:bg-white/10" aria-expanded="false">
                <span>{item.text}</span>
                <Icon name="mdi:chevron-down" class="w-4 h-4" />
              </button>
              <ul class="pl-4 space-y-2 hidden">
                {item.children.map((child) => (
                  <li>
                    <a href={child.href} class="block hover:text-white/90 transition-all duration-300 rounded-lg px-3 py-2 hover:bg-white/10 hover:translate-x-1" aria-current={currentPath === child.href ? 'page' : undefined}>
                      {child.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <a href={item.href} class="hover:text-white/90 transition-all duration-300 rounded-lg px-3 py-2 hover:bg-white/10 hover:translate-x-1" aria-current={currentPath === item.href ? 'page' : undefined}>
              {item.text}
            </a>
          )
        ))}
      </nav>
      <form class="mt-6">
        <label for="mobile-search" class="sr-only">Search</label>
        <div class="relative">
          <input
            type="search"
            id="mobile-search"
            name="search"
            placeholder="Search..."
            class="w-full bg-white/10 text-white placeholder-white/60 rounded-full py-2 px-5 pr-12 focus:outline-none focus:ring-2 focus:ring-white/20 transition-all duration-300 hover:bg-white/20"
          />
          <button type="submit" class="absolute right-0 top-0 mt-2 mr-3" aria-label="Submit search">
            <Icon name="mdi:magnify" class="w-5 h-5 text-teal-300" />
          </button>
        </div>
      </form>
      </div>
    </div>
  </div>
</header>

<style>
  .mask-gradient {
    mask-image: linear-gradient(to bottom, transparent, black 1rem, black, transparent);
  }
  
  .bg-grid-white/10 {
    background-size: 20px 20px;
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
                    linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  }
</style>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuToggle && mobileMenu) {
    mobileMenuToggle.addEventListener('click', () => {
      const expanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true' || false;
      mobileMenuToggle.setAttribute('aria-expanded', (!expanded).toString());
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Handle dropdown toggles in mobile menu
  const dropdownToggles = document.querySelectorAll('#mobile-menu button[aria-expanded]');
  dropdownToggles.forEach((toggle) => {
    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true' || false;
      toggle.setAttribute('aria-expanded', (!expanded).toString());
      const dropdown = toggle.nextElementSibling;
      if (dropdown) {
        dropdown.classList.toggle('hidden');
      }
    });
  });
</script>
