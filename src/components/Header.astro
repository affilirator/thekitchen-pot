---
import { Icon } from 'astro-icon/components';
import Logo from "../components/Logo.astro";

const navItems = [
  { href: '/', text: 'Home' },
  { href: '/blog/', text: 'Blog' },
  { href: '/about/', text: 'About' },
  { href: '/contact-us/', text: 'Contact' },
  {
    text: 'Resources',
    children: [
      { href: '/blog/category/kitchenware/', text: 'Kitchenware' },
      { href: '/blog/category/bakeware/', text: 'Bakeware' },
      { href: '/blog/category/how-to-guides/', text: 'Guides' },
    ]
  },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-gradient-to-r from-teal-600 via-teal-700 to-emerald-600 text-white top-0 z-30 backdrop-blur-sm border-b border-white/10 shadow-lg">
  <div class="container mx-auto px-4 py-3 relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-white/10 mask-gradient"></div>
    <div class="flex justify-between items-center">
      <Logo />

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8 z-10" aria-label="Main Navigation">
        {navItems.map((item) => (
          item.children ? (
            <div class="relative group">
              <button class="nav-button group" aria-expanded="false">
                <span>{item.text}</span>
                <Icon name="mdi:chevron-down" class="w-4 h-4" />
              </button>
              <ul class="dropdown-menu">
                {item.children.map((child) => (
                  <li>
                    <a href={child.href} class="block px-4 py-3 hover:bg-teal-50/50 rounded-md hover:translate-x-1 transition-all" aria-current={currentPath === child.href ? 'page' : undefined}>
                      {child.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            <a href={item.href} class="nav-link group" aria-current={currentPath === item.href ? 'page' : undefined}>
              <span class="relative z-10">{item.text}</span>
              <div class="absolute inset-0 bg-white/10 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity group-hover:scale-105"></div>
            </a>
          )
        ))}
      </nav>

      <div class="flex items-center space-x-4">
        <!-- Desktop Search -->
        <form class="hidden md:block">
          <label for="search" class="sr-only">Search</label>
          <div class="relative">
            <input
              type="search"
              id="search"
              name="search"
              placeholder="Search..."
              class="search-input w-64"
            />
            <button type="submit" class="absolute right-0 top-0 mt-2 mr-4 transition-transform hover:scale-110" aria-label="Submit search">
              <Icon name="mdi:magnify" class="w-5 h-5 text-teal-300" />
            </button>
          </div>
        </form>

        <!-- Mobile Menu Toggle -->
        <button
          id="mobile-menu-toggle"
          class="md:hidden text-white focus:outline-none focus:ring-2 focus:ring-white/20 rounded-lg p-2 hover:bg-white/10 transition-all"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <Icon name="mdi:menu" class="w-6 h-6" />
          <span class="sr-only">Toggle menu</span>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden mt-4 hidden">
      <div class="rounded-xl bg-white/10 backdrop-blur-md p-4 border border-white/10 shadow-2xl">
        <nav class="flex flex-col space-y-3" aria-label="Mobile Navigation">
          {navItems.map((item) => (
            item.children ? (
              <div class="space-y-2">
                <button class="flex items-center justify-between w-full text-left hover:bg-white/10 rounded-lg px-3 py-2 transition-all focus:ring-2 focus:ring-white/20 focus:outline-none" aria-expanded="false">
                  <span>{item.text}</span>
                  <Icon name="mdi:chevron-down" class="w-4 h-4" />
                </button>
                <ul class="pl-4 space-y-2 hidden">
                  {item.children.map((child) => (
                    <li>
                      <a href={child.href} class="block px-3 py-2 hover:bg-white/10 rounded-lg hover:translate-x-1 transition-all" aria-current={currentPath === child.href ? 'page' : undefined}>
                        {child.text}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a href={item.href} class="px-3 py-2 hover:bg-white/10 rounded-lg hover:translate-x-1 transition-all block" aria-current={currentPath === item.href ? 'page' : undefined}>
                {item.text}
              </a>
            )
          ))}
        </nav>
        
        <!-- Mobile Search -->
        <form class="mt-6">
          <label for="mobile-search" class="sr-only">Search</label>
          <div class="relative">
            <input
              type="search"
              id="mobile-search"
              name="search"
              placeholder="Search..."
              class="search-input w-full"
            />
            <button type="submit" class="absolute right-0 top-0 mt-2 mr-3" aria-label="Submit search">
              <Icon name="mdi:magnify" class="w-5 h-5 text-teal-300" />
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</header>

<style>
  .mask-gradient {
    mask-image: linear-gradient(to bottom, transparent, black 1rem, black, transparent);
  }
  
  .bg-grid-white\/10 {
    background-size: 20px 20px;
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
                    linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
  }

  .nav-button {
    @apply flex items-center space-x-1 hover:text-white/90 hover:scale-105 transition-all focus:outline-none focus:ring-2 focus:ring-white/20 rounded-lg px-3 py-2 relative;
  }

  .nav-link {
    @apply relative px-3 py-2 hover:text-white/90 transition-all focus:outline-none rounded-lg;
  }

  .dropdown-menu {
    @apply absolute left-0 mt-2 w-56 bg-white/90 backdrop-blur-md text-teal-900 rounded-lg shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all border border-white/20 transform group-hover:translate-y-0 translate-y-2;
  }

  .search-input {
    @apply bg-white/10 text-white placeholder-white/60 rounded-full py-2 px-5 pr-12 focus:outline-none focus:ring-2 focus:ring-white/20 transition-all hover:bg-white/20;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    // Mobile menu toggle
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuToggle && mobileMenu) {
      mobileMenuToggle.addEventListener('click', () => {
        const expanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
        mobileMenuToggle.setAttribute('aria-expanded', (!expanded).toString());
        mobileMenu.classList.toggle('hidden');
      });
    }
    
    // Mobile dropdown toggles
    document.querySelectorAll('#mobile-menu button[aria-expanded]').forEach(toggle => {
      toggle.addEventListener('click', () => {
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', (!expanded).toString());
        const dropdown = toggle.nextElementSibling;
        dropdown?.classList.toggle('hidden');
      });
    });
  });
</script>