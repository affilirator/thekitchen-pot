---
import { Card } from "@/components/ui/card";

interface Props {
  author: {
    name: string;
    image: string;
    bio: string;
    expertise: string[];
  };
}

const { author } = Astro.props;
---

<Card className="p-6">
  <div class="flex items-center gap-4 mb-4">
    <img
      src={author.image}
      alt={author.name}
      class="w-16 h-16 rounded-full object-cover"
    />
    <div>
      <h3 class="font-bold text-lg">{author.name}</h3>
      <p class="text-muted-foreground text-sm">Expert Reviewer</p>
    </div>
  </div>
  
  <p class="text-muted-foreground mb-4">{author.bio}</p>
  
  <div class="space-y-2">
    <h4 class="font-medium text-sm text-muted-foreground">Areas of Expertise:</h4>
    <div class="flex flex-wrap gap-2">
      {author.expertise.map(skill => (
        <span class="bg-accent/5 px-3 py-1 rounded-full text-sm">
          {skill}
        </span>
      ))}
    </div>
  </div>
</Card>