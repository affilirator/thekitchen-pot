---
// src/components/About/TeamShowcase.astro
import { Image } from 'astro:assets';
import TeamMember from './TeamMember.astro';

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  image: string;
  slug?: string;
}

const teamMembers: TeamMember[] = [
  {
    name: "Chef Boniface Muriuki",
    role: "Executive Chef",
    bio: "James Beard Award winner with 15+ years experience",
    image: "/images/team/maria.jpg",
    slug: "boniface-muriuki" // URL-friendly version of the name
  }
];
---

<section class="py-16" aria-labelledby="team-heading">
  <div class="container mx-auto px-4">
    <h2 id="team-heading" class="text-3xl md:text-4xl font-bold text-center mb-12">
      Meet Our Culinary Family
    </h2>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 md:gap-8">
      {teamMembers.map(member => (
        <a
          href={`/authors/${member.slug}`}
          class="block group transition-transform hover:scale-105 focus:scale-105 focus:outline-none"
          aria-label={`Learn more about ${member.name}`}
        >
          <TeamMember {...member} />
        </a>
      ))}
    </div>
  </div>
</section>

