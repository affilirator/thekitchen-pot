---
// src/components/About/InnovationHero.astro
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  subtitle: string;
  imageSrc: ImageMetadata;
}

const { title, subtitle, imageSrc } = Astro.props;
---

<section class="relative min-h-[90vh] overflow-hidden bg-gradient-to-br from-orange-50 to-amber-50">
  <div class="container mx-auto px-4 py-24 grid lg:grid-cols-2 gap-16 items-center">
    {/* Text Content */}
    <div class="relative z-10 space-y-8">
      <h1 class="text-5xl md:text-7xl font-bold text-gray-900 leading-tight">
        {title}
        <span class="block text-orange-600 text-3xl md:text-4xl mt-4">{subtitle}</span>
      </h1>

      <div class="flex gap-6">
        <a href="#journey" class="btn-platter">
          Our Journey
          <Icon name="mdi:rocket-launch" class="ml-2 w-6 h-6" />
        </a>
      </div>
    </div>

    {/* Image with Floating Elements */}
    <div class="relative">
      <div class="absolute -top-16 -right-16 w-72 h-72 bg-orange-100 rounded-full mix-blend-multiply opacity-40"></div>
      <Image
        src={imageSrc}
        alt="Space-efficient kitchen design"
        width={800}
        height={600}
        format='webp'
        class="relative z-10 rounded-3xl shadow-2xl transform rotate-1 hover:rotate-0 transition-transform"
      />
      {/* <div class="absolute -bottom-12 -left-12 p-6 bg-white rounded-2xl shadow-lg">
        <Icon name="mdi:ruler" class="w-12 h-12 text-orange-600 z-50" />
        <p class="font-mono mt-2">Maximizing<br/>Every Inch</p>
      </div>
      */}
    </div>
  </div>
</section>

<style>
  .btn-platter {
    @apply inline-flex items-center px-8 py-4 bg-orange-600 text-white rounded-full
           hover:bg-orange-700 transition-all transform hover:scale-105
           shadow-lg hover:shadow-xl text-lg font-semibold;
  }
</style>