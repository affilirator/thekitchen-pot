---
// src/components/About/PhilosophyCard.astro
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  icon: string;
  principles: string[];
  accentColor?: string;
}

const { title, icon, principles, accentColor = 'orange' } = Astro.props;
---

<section class="relative bg-orange-400 p-8 rounded-[2.5rem] shadow-2xl border-8 border-${accentColor}-100
             transform hover:-translate-y-2 transition-all duration-300">
  <div class="absolute -top-8 left-1/2 -translate-x-1/2 w-16 h-16 bg-${accentColor}-600
           rounded-2xl flex items-center justify-center shadow-lg">
    <Icon name={icon} class="w-8 h-8 text-white" />
  </div>

  <h3 class="text-2xl font-bold text-center mt-8 mb-6">{title}</h3>

  <ul class="space-y-4">
    {principles.map((principle, index) => (
      <li class="flex items-start gap-4">
        <div class="w-8 h-8 bg-${accentColor}-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <span class="font-mono text-${accentColor}-600">{index + 1}</span>
        </div>
        <p class="text-gray-600">{principle}</p>
      </li>
    ))}
  </ul>
</section>