---
// src/components/About/TrustBadge.astro
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  value: string;
  description: string;
  icon: string;
}

const { title, value, description, icon } = Astro.props;
---

<div class="bg-white p-8 rounded-[2rem] border-4 border-orange-100
          hover:border-orange-200 transition-colors">
  <div class="flex items-start gap-6">
    <div class="flex-shrink-0 w-16 h-16 bg-orange-100 rounded-2xl flex items-center justify-center">
      <Icon name={icon} class="w-8 h-8 text-orange-600" />
    </div>

    <div>
      <div class="flex items-baseline gap-2">
        <span class="text-4xl font-bold text-orange-600">{value}</span>
        <span class="text-lg font-semibold text-gray-600">{title}</span>
      </div>
      <p class="text-gray-600 mt-2">{description}</p>
    </div>
  </div>
</div>