---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import aboutHero from '@/data/assets/images/multipurpose-kitchen-appliances.jpg';

interface Props {
  headline: string;
  subtitle: string;
}

const { headline, subtitle } = Astro.props;
---

<section
  class="relative min-h-[60vh] sm:min-h-[70vh] lg:min-h-[80vh] flex items-center justify-center overflow-hidden"
  aria-labelledby="hero-heading"
>
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/60 to-black/40 z-10"
    aria-hidden="true"
  ></div>

  <Image
    src={aboutHero}
    alt="Professional chefs working efficiently in a compact kitchen space, showcasing innovative cooking techniques"
    width={1920}
    height={1080}
    class="absolute inset-0 w-full h-full object-cover z-0"
    loading="eager"
    fetchpriority="high"
  />

  <div class="relative z-20 container mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20 text-center">
    <div class="max-w-4xl mx-auto space-y-6 sm:space-y-8">
      <h1
        id="hero-heading"
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-white font-bold leading-tight sm:leading-tight animate-fade-in-up"
      >
        {headline}
      </h1>
      <p
        class="text-lg sm:text-xl md:text-2xl text-white/90 max-w-2xl mx-auto leading-relaxed animate-fade-in-up delay-100"
      >
        {subtitle}
      </p>
      <div class="animate-fade-in-up delay-200 pt-4 sm:pt-6">
        <a
          href="#our-story"
          class="btn-primary"
          aria-label="Learn more about our culinary journey"
        >
          <span>Explore Our Journey</span>
          <Icon
            name="mdi:arrow-down"
            class="ml-2 w-5 h-5"
            aria-hidden="true"
          />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .btn-primary {
    @apply inline-flex items-center px-6 sm:px-8 py-3
           bg-card hover:bg-accent focus:bg-accent
           rounded-lg transition-all duration-300
           text-base sm:text-lg font-medium
           focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent
           transform hover:-translate-y-0.5;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  .delay-100 {
    animation-delay: 100ms;
  }

  .delay-200 {
    animation-delay: 200ms;
  }
</style>