---
// src/components/About/ValueCard.astro
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<article class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow
              border border-gray-100 group">
  <div class="w-16 h-16 bg-primary-100 rounded-xl mb-6 flex items-center justify-center
             group-hover:bg-primary-600 transition-colors">
    <Icon name={icon} class="w-8 h-8 text-primary-600 group-hover:text-white" />
  </div>
  <h3 class="text-2xl font-bold mb-4">{title}</h3>
  <p class="text-gray-600">{description}</p>
</article>