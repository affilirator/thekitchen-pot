---
// src/components/About/InnovationTimeline.astro
import { Icon } from 'astro-icon/components';

interface TimelineItem {
  year: string;
  title: string;
  description: string;
  icon: string;
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<section id="journey" class="py-24 bg-gradient-to-b from-orange-50 to-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">Our Evolution</h2>

    <div class="relative max-w-5xl mx-auto">
      {/* Timeline Line */}
      <div class="absolute left-1/2 w-1 bg-orange-200 h-full -translate-x-1/2"></div>

      {items.map((item, index) => (
        <div class={`relative mb-16 ${index % 2 === 0 ? 'pr-[55%]' : 'pl-[55%]'}`}>
          <div class={`absolute top-4 ${index % 2 === 0 ? 'right-0' : 'left-0'}
                      w-16 h-16 bg-orange-600 rounded-2xl flex items-center justify-center shadow-lg`}>
            <Icon name={item.icon} class="w-8 h-8 text-white" />
          </div>

          <div class={`p-8 bg-white rounded-3xl shadow-xl ${index % 2 === 0 ? 'mr-8' : 'ml-8'}`}>
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <span class="font-mono text-orange-600">{item.year}</span>
              </div>
              <h3 class="text-2xl font-bold">{item.title}</h3>
            </div>
            <p class="text-gray-600">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>