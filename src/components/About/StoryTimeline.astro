---
// src/components/About/StoryTimeline.astro
import { Icon } from 'astro-icon/components';
import TimelineItem from './TimelineItem.astro';

const milestones = [
  {
    year: "2015",
    title: "Humble Beginnings",
    content: "Founded in a small home kitchen with just 3 recipes",
    icon: "heroicons:home"
  },
  {
    year: "2018",
    title: "First Restaurant",
    content: "Opened our flagship location in downtown Portland",
    icon: "heroicons:building-storefront"
  }
];
---

<section class="py-16 bg-gray-50" id="our-story">
  <div class="container mx-auto px-4 relative">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
      Our Flavorful Journey
    </h2>

    <div class="relative max-w-4xl mx-auto">
      <div class="absolute left-1/2 w-1 bg-gray-200 h-full -translate-x-1/2
                  md:left-[calc(50%+160px)]"></div>

      {milestones.map((milestone, index) => (
        <TimelineItem
          {...milestone}
          orientation={index % 2 === 0 ? 'left' : 'right'}
        />
      ))}
    </div>
  </div>
</section>