---
// src/pages/contact-us.astro
import Layout from '@/layouts/Layout.astro';
import ContactHero from '@/components/Contact/ContactHero.astro';
import ContactChannel from '@/components/Contact/ContactChannel.astro';
import ContactForm from '@/components/Contact/ContactForm.astro';
import ContactMap from '@/components/Contact/ContactMap.astro';
import SocialLinks from '@/components/Contact/SocialLinks.astro';

const formFields = [
  { type: 'text', name: 'name', label: 'Full Name', required: true },
  { type: 'email', name: 'email', label: 'Email Address', required: true },
  { type: 'tel', name: 'phone', label: 'Phone Number' },
  { type: 'select', name: 'subject', label: 'Inquiry Type', required: true }
];

const socialLinks = [
  { platform: 'instagram', url: '#', handle: 'TheKitchenPot' },
  { platform: 'facebook', url: '#', handle: 'TheKitchenPotOfficial' },
  { platform: 'twitter', url: '#', handle: 'KitchenPotHQ' }
];
---
<Layout title="Contact Us - The Kitchen Pot">

<ContactHero
  title="Let's Chop It Up!"
  subtitle="How can we help you maximize your tiny kitchen?"
/>

<div class="container mx-auto px-4 py-16 space-y-16">
  <div class="grid md:grid-cols-3 gap-8">
    <ContactChannel
      icon="mdi:email"
      title="Email Us"
      details={["General: hello@thekitchenpot.com", "Support: help@thekitchenpot.com"]}
    />
    <ContactChannel
      icon="mdi:phone"
      title="Call Us"
      details={["US: +1 (800) 123-4567", "Intl: +1 (555) 123-4567"]}
      accentColor="amber"
    />
    <ContactChannel
      icon="mdi:map-marker"
      title="Visit Us"
      details={["123 Kitchen Street", "Portland, OR 97209", "Mon-Fri: 9AM - 5PM PST"]}
      accentColor="rose"
    />
  </div>

  <div class="grid lg:grid-cols-2 gap-12 items-start">
    <ContactForm formFields={formFields} />
    <ContactMap />
  </div>

  <SocialLinks links={socialLinks} />
</div>
</Layout>