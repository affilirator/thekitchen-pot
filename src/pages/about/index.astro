---
// src/pages/about.astro
import Layout from '@/layouts/Layout.astro';
import InnovationHero from '@/components/About/InnovationHero.astro';
import PhilosophyCard from '@/components/About/PhilosophyCard.astro';
import InnovationTimeline from '@/components/About/InnovationTimeline.astro';
import TrustBadge from '@/components/About/TrustBadge.astro';
import ChefShowcase from '@/components/About/ChefShowcase.astro';

import heroImage from "@/data/assets/images/quitest-kitchen-appliances.jpg";
import founderImg from "@/data/assets/images/tiny-kitchen-will-this-fit.jpg";
import IconCard from '@/components/About/IconCard.astro';

const timelineItems = [
  {
    year: "2015",
    title: "Founding Flame",
    description: "Born from a burned grilled cheese in a 42 sq.ft NYC kitchenette. Our first prototype - a collapsible spice rack - goes viral on Reddit.",
    icon: "mdi:chef-hat"
  },
  {
    year: "2017",
    title: "Space-Smart Launch",
    description: "Released our first curated collection - 15 apartment-approved tools that fit in shoebox-sized kitchens. Featured in Apartment Therapy.",
    icon: "mdi:tools"
  },
  {
    year: "2020",
    title: "Pandemic Pivot",
    description: "Created the Tiny Kitchen Survival Kit, helping 50,000+ lockdown cooks maximize their small spaces. Partnered with IKEA for space-efficient designs.",
    icon: "mdi:virus"
  },
  {
    year: "2022",
    title: "Award-Winning Innovation",
    description: "Won Good Design Award for our Stack & Steam cookware system. Reached 1 million newsletter subscribers.",
    icon: "mdi:trophy"
  },
  {
    year: "2025",
    title: "Future Vision",
    description: "Launching smart kitchen sensors that analyze space usage in real-time. Expanding to 10 new countries.",
    icon: "mdi:rocket"
  }
];
// Sample Chef Data
const chefData = {
  name: "Boniface Muriuki",
  role: "Founder & Chief Space Optimizer",
  bio: "Le Cordon Bleu-trained chef turned small-space evangelist. Creator of the Space Efficiency Ratioâ„¢ used by appliance manufacturers worldwide. When not testing 10th-generation colanders, he's teaching micro-meal prep classes at community centers.",
  image: founderImg,
  specialties: [
    "Vertical Cooking Systems",
    "Appliance Downsizing",
    "Clutter-Free Meal Prep",
    "Renter-Friendly Hacks"
  ],
  socials: [
    { platform: "twitter" as const, url: "https://twitter.com/chefboniface" },
    { platform: "instagram" as const, url: "https://instagram.com/tinykitchenhero" },
    { platform: "linkedin" as const, url: "https://linkedin.com/in/bonifacem" }
  ]
};

const monthYear = new Date().toLocaleString('default', { month: 'long', year: 'numeric' });
---

<Layout title={`About | The Kitchen Pot | ${monthYear}`} description="The Kitchen Pot is reimagining small space cooking for tiny homes." robots="index, follow">

<InnovationHero
  title="Reimagining Small Space Cooking"
  subtitle="Where every inch inspires culinary magic"
  imageSrc={heroImage}
/>

<IconCard
  title="The Kitchen Pot"
  content="Reimagining small space cooking for tiny homes"
  icon="mdi:chef-hat"
  layoutStyle="iconTop"

/>

<InnovationTimeline items={timelineItems} />

<div class="grid md:grid-cols-3 gap-8 container mx-auto px-4 py-16">
  <TrustBadge
    title="Happy Cooks"
    value="238K+"
    description="Tiny Kitchen Warriors"
    icon="mdi:chef-hat"
  />
  {/* Add more TrustBadges */}
</div>

<div class="container mx-auto px-4 py-12">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10">
    {[chefData].map(chef => (
      <ChefShowcase chef={chefData} />
    ))}
  </div>
</div>
</Layout>