---
import Layout from '@/layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

const suggestions = [
  { text: 'Browse Our Products', href: '/' },
  { text: 'Read Our Blog', href: '/blog/' },
  { text: 'Contact Support', href: '/contact-us/' },
];
---

<Layout 
  title="Page Not Found | The Kitchen Pot"
  description="Sorry, we couldn't find the page you were looking for. Please check the URL or navigate back to our homepage."
  robots="noindex, follow"
>
  <main class="min-h-[80vh] relative overflow-hidden bg-gradient-to-b from-gray-50 to-white">
    {/* Decorative background elements */}
    <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,transparent,black,transparent)] pointer-events-none"></div>
    
    <div class="container mx-auto px-4 py-16 relative z-10">
      <div class="max-w-2xl mx-auto text-center">
        {/* Visual Error Indicator */}
        <div class="mb-8 relative">
          <div class="text-8xl md:text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-600 to-purple-600">
            404
          </div>
          <Icon name="mdi:pot-steam" class="w-24 h-24 absolute left-1/2 top-1/2 -translate-x-1/2 translate-y-[-25%] text-gray-300 opacity-50" />
        </div>

        {/* Main Content */}
        <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
          Oops! This page is off the menu
        </h1>
        <p class="text-gray-600 text-lg mb-8">
          The page you're looking for seems to have simmered away. Let's help you find what you need!
        </p>

        {/* Primary Action */}
        <a 
          href="/" 
          class="inline-flex items-center gap-2 bg-gradient-to-r from-teal-600 to-teal-500 text-white font-medium py-3 px-8 rounded-full hover:shadow-lg hover:shadow-teal-200/50 transition-all duration-300 hover:-translate-y-1 mb-8"
        >
          <Icon name="mdi:home" class="w-5 h-5" />
          <span>Return Home</span>
        </a>

        {/* Helpful Suggestions */}
        <div class="mt-12">
          <h2 class="text-xl font-semibold mb-6 text-gray-800">You might find these helpful:</h2>
          <div class="flex flex-wrap justify-center gap-4">
            {suggestions.map(({ text, href }) => (
              <a
                href={href}
                class="px-6 py-3 rounded-lg bg-white border border-gray-200 hover:border-teal-200 hover:shadow-md transition-all duration-300 text-gray-700 hover:text-teal-600"
              >
                {text}
              </a>
            ))}
          </div>
        </div>

        {/* Search Suggestion */}
        <div class="mt-12 p-6 bg-gray-50 rounded-2xl border border-gray-100">
          <h2 class="text-lg font-medium text-gray-800 mb-2">
            Need something specific?
          </h2>
          <p class="text-gray-600">
            Try using the search feature or <a href="/contact-us/" class="text-teal-600 hover:text-teal-800 underline decoration-2 decoration-teal-200">contact our support team</a>.
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
